<div class="container mt-5">
  <div class="row">
    {{#each notes}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5
              class="card-title d-flex justify-content-between aling-items-start mb-4"
            >{{title}} <a href="/notes/edit/{{_id}}"<i class="fa fa-pencil text-decoration-none fa-lg"></i></a></h5>
            <hr class="my-4" />
            <p class="card-text">{{description}}</p> 
            {{!-- configura con el method  override paraque realice la peticion delete --}}
            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
            {{!-- aqui igual con el input hidden --}}
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger  btn-sm btn-block">Delete</button>
            </form>        
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>